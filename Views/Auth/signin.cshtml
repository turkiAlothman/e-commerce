  @model SignInForm
  
  <!-- Login Section -->
    <section class="d-flex align-items-center justify-content-center pt-3" style="min-height: 80vh;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="card shadow">
                        <div class="card-body">
                            <h3 class="card-title text-center mb-4">Login</h3>
                            <form asp-controller="Auth" asp-action="signin" method="POST">
                                <div class="mb-3">
                                    <label for="email" asp-for="Email" class="form-label">Email address</label>
                                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter your email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="password" asp-for="Password" class="form-label">Password</label>
                                    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter your password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <apan class="text-danger"> @Html.ValidationMessage("error") </apan>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Login</button>
    
                                </div>
    
                            </form>
                            <div class="text-center mt-3">
                                <p>Don't have an account? <a href="auth/signup">Sign up</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

        <!--jquery validation-->
    <script src="lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>